# Vagrantfile for setting up a 6 node Elasticsearch v7.5.1.
# 3 nodes, all have the master and data roles
# 1 Kibana node

Vagrant.configure("2") do |config|

  config.vm.define "elastic1" do |elastic1|
    elastic1.vm.box = "centos/7"
    elastic1.vm.hostname = "elastic1"
    elastic1.vm.network :private_network, ip: "192.168.56.111"
    elastic1.vm.provider "virtualbox" do |vb|
      vb.gui = false
      vb.memory = "2048"
      vb.name = "elastic1"
    end
    elastic1.vm.provision :shell, path: "scripts/elastic_node_provision.sh"
    elastic1.vm.provision :shell, path: "scripts/metricbeat-install-only.sh"
    elastic1.vm.provision :shell, path: "scripts/filebeat-install-only.sh"
    elastic1.vm.provision :shell, path: "scripts/auditbeat-install-only.sh"
  end
  config.vm.define "elastic2" do |elastic2|
    elastic2.vm.box = "centos/7"
    elastic2.vm.hostname = "elastic2"
    elastic2.vm.network :private_network, ip: "192.168.56.112"
    elastic2.vm.provider "virtualbox" do |vb|
      vb.gui = false
      vb.memory = "2048"
      vb.name = "elastic2"
    end
    elastic2.vm.provision :shell, path: "scripts/elastic_node_provision.sh"
    elastic2.vm.provision :shell, path: "scripts/metricbeat-install-only.sh"
    elastic2.vm.provision :shell, path: "scripts/filebeat-install-only.sh"
    elastic2.vm.provision :shell, path: "scripts/auditbeat-install-only.sh"
  end
  config.vm.define "elastic3" do |elastic3|
    elastic3.vm.box = "centos/7"
    elastic3.vm.hostname = "elastic3"
    elastic3.vm.network :private_network, ip: "192.168.56.113"
    elastic3.vm.provider "virtualbox" do |vb|
      vb.gui = false
      vb.memory = "2048"
      vb.name = "elastic3"
    end
    elastic3.vm.provision :shell, path: "scripts/elastic_node_provision.sh"
    elastic3.vm.provision :shell, path: "scripts/metricbeat-install-only.sh"
    elastic3.vm.provision :shell, path: "scripts/filebeat-install-only.sh"
    elastic3.vm.provision :shell, path: "scripts/auditbeat-install-only.sh"
  end
  config.vm.define "kibana" do |kibana|
    kibana.vm.box = "centos/7"
    kibana.vm.hostname = "kibana"
    kibana.vm.network :private_network, ip: "192.168.56.114"
    kibana.vm.provider "virtualbox" do |vb|
      vb.gui = false
      vb.memory = "2048"
      vb.name = "kibana"
    end
    kibana.vm.provision :shell, path: "scripts/kibana_node_provision.sh"
    kibana.vm.provision :shell, path: "scripts/metricbeat-full-setup.sh"
    kibana.vm.provision :shell, path: "scripts/filebeat-full-setup.sh"
    kibana.vm.provision :shell, path: "scripts/auditbeat-full-setup.sh"
  end
end